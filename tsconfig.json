{
    "compilerOptions": {
       "experimentalDecorators": true,
       "outDir": "dist",
       "module": "CommonJS",
       "target": "ES2020",
       "rootDir": "src",
       "moduleResolution": "Node",
       "esModuleInterop": true,
       "emitDecoratorMetadata": true,
       "types": ["node"]
    },
    "include": [
        "**/*",
        "./src/"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*"
    ]
}